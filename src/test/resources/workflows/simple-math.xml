<?xml version="1.0" encoding="UTF-8"?>
<workflow name="simple-math-workflow">
    <steps>
        <transition from="0" to="1">
            <action actor="math" method="add">10,5</action>
        </transition>

        <transition from="1" to="2">
            <action actor="math" method="multiply">3,4</action>
        </transition>

        <transition from="2" to="end">
            <action actor="math" method="getLastResult"></action>
        </transition>
    </steps>
</workflow>
