<?xml version="1.0" encoding="UTF-8"?>
<workflow name="multi-action-workflow">
    <steps>
        <transition from="0" to="1">
            <action actor="math" method="add">
                <arguments>
                    <arg>5</arg>
                    <arg>3</arg>
                </arguments>
            </action>
            <action actor="math" method="multiply">
                <arguments>
                    <arg>2</arg>
                    <arg>4</arg>
                </arguments>
            </action>
            <action actor="math" method="getLastResult"/>
        </transition>
    </steps>
</workflow>
